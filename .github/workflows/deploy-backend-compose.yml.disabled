name: Deploy Backend (Docker Compose)

on:
  push:
    branches:
      - main
    paths:
      - 'features/**'
      - 'pyproject.toml'
      - 'Dockerfile'
      - 'main.py'
      - 'main_v2.py'
      - 'docker-compose.prod.yml'
      - '.github/workflows/deploy-backend-compose.yml'
  workflow_dispatch:
    inputs:
      branch:
        description: 'Branch to deploy'
        required: true
        default: 'main'
        type: choice
        options:
          - main
          - deployment/github-actions-setup
          - staging

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}/backend

jobs:
  build-and-push:
    name: Build & Push Backend Image
    runs-on: ubuntu-latest

    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          ref: ${{ github.event.inputs.branch || github.ref }}

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=ref,event=branch
            type=sha,prefix={{branch}}-
            type=raw,value=latest

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          platforms: linux/amd64

  deploy:
    name: Deploy Backend Container
    runs-on: ubuntu-latest
    needs: build-and-push

    steps:
      - name: Checkout code (for docker-compose.prod.yml)
        uses: actions/checkout@v4
        with:
          ref: ${{ github.event.inputs.branch || github.ref }}

      - name: Deploy to Digital Ocean via Docker Compose
        uses: appleboy/ssh-action@v1.2.0
        with:
          host: ${{ secrets.DO_DROPLET_IP }}
          username: ${{ secrets.DO_DROPLET_USER }}
          key: ${{ secrets.DO_SSH_PRIVATE_KEY }}
          port: 22
          script: |
            set -e

            echo "=========================================="
            echo "üöÄ Deploying Backend Container"
            echo "=========================================="

            # Navigate to app directory
            cd /opt/ai-video-automation

            # Login to GHCR
            echo "${{ secrets.GITHUB_TOKEN }}" | docker login ${{ env.REGISTRY }} -u ${{ github.actor }} --password-stdin

            # Pull latest backend image
            docker pull ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest

            # Create .env file for docker-compose
            cat > .env << 'ENV_EOF'
            KIE_API_KEY=${{ secrets.KIE_API_KEY }}
            OPENAI_API_KEY=${{ secrets.OPENAI_API_KEY }}
            SUPABASE_URL=${{ secrets.SUPABASE_URL }}
            SUPABASE_KEY=${{ secrets.SUPABASE_KEY }}
            SUPABASE_SERVICE_KEY=${{ secrets.SUPABASE_SERVICE_KEY }}
            YOUTUBE_CLIENT_ID=${{ secrets.YOUTUBE_CLIENT_ID }}
            YOUTUBE_CLIENT_SECRET=${{ secrets.YOUTUBE_CLIENT_SECRET }}
            YOUTUBE_REFRESH_TOKEN=${{ secrets.YOUTUBE_REFRESH_TOKEN }}
            ENV_EOF

            # Recreate only backend service
            docker-compose -f docker-compose.prod.yml up -d --no-deps --force-recreate backend

            # Wait for backend to be healthy
            echo "Waiting for backend to be healthy..."
            sleep 10

            # Health check
            if docker exec ai-video-backend curl -f http://localhost:8000/health 2>/dev/null; then
              echo "‚úÖ Backend deployed successfully!"
              docker ps -f name=ai-video-backend --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}"
            else
              echo "‚ùå Health check failed"
              docker logs --tail 50 ai-video-backend
              exit 1
            fi

            echo "=========================================="
            echo "‚úÖ Backend Deployment Complete"
            echo "=========================================="

      - name: Copy docker-compose.prod.yml to droplet
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.DO_DROPLET_IP }}
          username: ${{ secrets.DO_DROPLET_USER }}
          key: ${{ secrets.DO_SSH_PRIVATE_KEY }}
          port: 22
          source: "docker-compose.prod.yml"
          target: "/opt/ai-video-automation/"

      - name: Deployment summary
        if: success()
        run: |
          echo "=========================================="
          echo "‚úÖ Backend Deployment Complete"
          echo "=========================================="
          echo "Image: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest"
          echo "Container: ai-video-backend"
          echo "Health check: https://vingine.duckdns.org/health"
          echo "=========================================="
