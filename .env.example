# Example environment file - copy to .env and fill values

# Required
KIE_API_KEY=your_kie_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Supabase (for conversation state persistence)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# YouTube OAuth via environment (no browser at runtime)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# Optional
VIDEO_DURATION=8
VIDEO_QUALITY=high
VEO_MAX_WAIT_TIME=600
LOG_LEVEL=INFO
# KIE_BASE_URL=https://api.kie.ai/api/v1
KIE_MODEL=veo3_fast  # Options: veo3 (quality), veo3_fast (faster)

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o
# USE_AGENT_PIPELINE=true  # Enable multi-agent research pipeline

# Pipeline Mode
# PRODUCTION_MODE=true  # Set to true to publish videos, false for download only

# Voiceover Configuration
ENABLE_VOICEOVER=true
TTS_VOICE=nova  # Options: alloy, echo, fable, onyx, nova, shimmer
TTS_MODEL=tts-1-hd  # tts-1 (faster) or tts-1-hd (higher quality)

# Subtitles
ENABLE_SUBTITLES=true
SUBTITLE_FONT_SIZE=28
SUBTITLE_WORDS_PER_LINE=5

# Extended Mode (Multi-Scene Videos)
EXTENDED_MODE=true  # Enable multi-scene video generation
VIDEO_SCENES=4  # Number of 8-second scenes (4 = 32s video)
